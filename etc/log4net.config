<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="LogToFileInfoToWarn"
            type="log4net.Appender.RollingFileAppender">
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin"
             value="INFO"/>
      <param name="LevelMax"
             value="WARN"/>
    </filter>
    <file value="Logs/info.log"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="5" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{s} %-5level [%logger] %message%newline" />
    </layout>
  </appender>
  <appender name="LogToFileError"
            type="log4net.Appender.RollingFileAppender">
    <filter type="log4net.Filter.LevelMatchFilter">
      <levelToMatch value="ERROR" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <file value="Logs/error.log"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="5" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{s} %-5level [%logger] %message%newline" />
    </layout>
  </appender>
  <appender name="LogToFileDebug"
            type="log4net.Appender.RollingFileAppender">
    <threshold value="DEBUG"/>
    <file value="Logs/debug.log"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="5" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{s} %-5level [%logger] %message%newline" />
    </layout>
  </appender>
  <appender name="ConsoleAppender"
            type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level [%logger] %message%newline" />
    </layout>
  </appender>
  <root>
    <!-- Value of priority may be ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF -->
    <level value="ALL" />
    <appender-ref ref="LogToFileInfoToWarn" />
    <appender-ref ref="LogToFileError" />
    <appender-ref ref="LogToFileDebug" />
    <appender-ref ref="ConsoleAppender" />
  </root>
</log4net>
