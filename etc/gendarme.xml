<gendarme>
  <!-- See gendarme.ignore for explanations. -->

  <ruleset name="narvalo-strict">
    <!--
      AvoidAssemblyVersionMismatchRule: We use Semantic Versioning.
    -->
    <rules include="*"
           exclude="AvoidAssemblyVersionMismatchRule"
           from="Gendarme.Rules.BadPractice.dll"/>
    <rules include="*" from="Gendarme.Rules.Concurrency.dll" />
    <rules include="*" from="Gendarme.Rules.Correctness.dll"/>
    <!--
      AvoidSmallNamespaceRule: Covered by FxCop (CA1020).
      ProvideAlternativeNamesForOperatorOverloadsRule: Covered by FxCop (CA2225).
    -->
    <rules include="*"
           exclude=" AvoidSmallNamespaceRule
                    | ProvideAlternativeNamesForOperatorOverloadsRule"
           from="Gendarme.Rules.Design.dll"/>
    <!--
      AvoidMethodWithUnusedGenericTypeRule: Covered by FxCop (CA1004).
      DoNotDeclareStaticMembersOnGenericTypesRule: Covered by FxCop (CA1000).
    -->
    <rules include="*"
           exclude="AvoidMethodWithUnusedGenericTypeRule
                    | DoNotDeclareStaticMembersOnGenericTypesRule"
           from="Gendarme.Rules.Design.Generic.dll"/>
    <rules include="*" from="Gendarme.Rules.Design.Linq.dll"/>
    <rules include="*" from="Gendarme.Rules.Exceptions.dll" />
    <rules include="*" from="Gendarme.Rules.Gendarme.dll"/>
    <rules include="*" from="Gendarme.Rules.Interoperability.dll"/>
    <rules include="*" from="Gendarme.Rules.Interoperability.Com.dll"/>
    <rules include="*" from="Gendarme.Rules.Maintainability.dll"/>
    <!--
      ParameterNamesShouldMatchOverriddenMethodRule: Covered by FxCop (CA1725).
      UseCorrectCasingRule: Covered by StyleCop (SA1300).
    -->
    <rules include="*"
           exclude="ParameterNamesShouldMatchOverriddenMethodRule
                    | UseCorrectCasingRule"
           from="Gendarme.Rules.Naming.dll"/>
    <rules include="*" from="Gendarme.Rules.NUnit.dll"/>
    <!--
      AvoidUncalledPrivateCodeRule: Covered by FxCop (CA1811).
    -->
    <rules include="*"
           exclude="AvoidUncalledPrivateCodeRule"
           from="Gendarme.Rules.Performance.dll" />
    <!--
      MonoCompatibilityReviewRule: Covered by the API Portability Analyzer.
    -->
    <rules include="*"
           exclude="MonoCompatibilityReviewRule"
           from="Gendarme.Rules.Portability.dll" />
    <rules include="*" from="Gendarme.Rules.Security.dll" />
    <rules include="*" from="Gendarme.Rules.Security.Cas.dll" />
    <!--
      MarkEnumerationsAsSerializableRule: Fixing this rule could make the code more confusing.
    -->
    <rules include="*"
           exclude="MarkEnumerationsAsSerializableRule"
           from="Gendarme.Rules.Serialization.dll" />
    <!--
      AvoidLongMethodsRule: Covered by FxCop (CA1505).
    -->
    <rules include="*"
           exclude="AvoidLongMethodsRule"
           from="Gendarme.Rules.Smells.dll"/>
    <rules include="*" from="Gendarme.Rules.Ui.dll" />

    <!-- This file is missing from the NuGet distribution. -->
    <!--<rules include="*" from="Gendarme.Rules.Globalization.dll"/>-->
  </ruleset>
</gendarme>
