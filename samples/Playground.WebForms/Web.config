<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>

  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="false" />
  </appSettings>

  <connectionStrings>
    <clear />
    <add name="SqlServer" connectionString="Data Source=(LocalDB)\v11.0;AttachDbFilename=|DataDirectory|\Playground.mdf;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="v11.0" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
    <pages asyncTimeout="100" autoEventWireup="false" clientIDMode="Predictable" masterPageFile="~/Layouts/Site.Master" styleSheetTheme="Default">
      <controls>
        <add tagPrefix="mvp" namespace="Playground.Common" assembly="Playground.WebForms" />

        <add tagPrefix="uc" src="~/Controls/AsyncApmControl.ascx" tagName="AsyncApm" />
        <add tagPrefix="uc" src="~/Controls/AsyncTplControl.ascx" tagName="AsyncTpl" />
        <add tagPrefix="uc" src="~/Controls/CompositeControl.ascx" tagName="Composite" />
        <add tagPrefix="uc" src="~/Controls/EditWidgetControl.ascx" tagName="EditWidget" />
        <add tagPrefix="uc" src="~/Controls/HelloWorldControl.ascx" tagName="HelloWorld" />
        <add tagPrefix="uc" src="~/Controls/LookupWidgetControl.ascx" tagName="LookupWidget" />
        <add tagPrefix="uc" src="~/Controls/Messaging1Control.ascx" tagName="Messaging1" />
        <add tagPrefix="uc" src="~/Controls/Messaging2Control.ascx" tagName="Messaging2" />
        <add tagPrefix="uc" src="~/Controls/RedirectControl.ascx" tagName="Redirect" />
        <add tagPrefix="uc" src="~/Controls/SharedPresenterControl.ascx" tagName="SharedPresenter" />
      </controls>
    </pages>
  </system.web>
</configuration>